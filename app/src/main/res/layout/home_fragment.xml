<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/home_background_color"
        tools:context=".ui.homefragment.HomeFragment">

        <TextView
            android:id="@+id/doneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/done"
            android:textColor="@color/main_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/workInProgressTextView"
            app:layout_constraintTop_toBottomOf="@+id/blueBackGround" />

        <ImageView
            android:id="@+id/blueBackGround"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:src="@drawable/auth_page_blue_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currentTasksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:text="@string/current_tasks"
            android:textColor="@color/main_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blueBackGround" />

        <TextView
            android:id="@+id/toDoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/to_do"
            android:textColor="@color/main_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/workInProgressTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blueBackGround" />

        <TextView
            android:id="@+id/workInProgressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/work_in_progress"
            android:textColor="@color/main_color"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/doneTextView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toDoTextView"
            app:layout_constraintTop_toBottomOf="@+id/blueBackGround" />

        <TextView
            android:id="@+id/toDoNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/_5"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/toDoTextView"
            app:layout_constraintStart_toStartOf="@+id/toDoTextView"
            app:layout_constraintTop_toBottomOf="@+id/currentTasksTextView" />

        <TextView
            android:id="@+id/workInProgressNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/_3"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/workInProgressTextView"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="@+id/workInProgressTextView"
            app:layout_constraintTop_toBottomOf="@+id/currentTasksTextView" />

        <TextView
            android:id="@+id/doneNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="@string/_1"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/doneTextView"
            app:layout_constraintStart_toStartOf="@+id/doneTextView"
            app:layout_constraintTop_toBottomOf="@+id/currentTasksTextView" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="188dp"
            android:layout_marginBottom="53dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentTasksTextView"
            android:elevation="40dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/my_projects"
                    android:textColor="@color/main_color"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tasksRecyclerView"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="49dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ProfilePictureImageView"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="77dp"
            android:scaleType="centerCrop"
            android:src="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="108dp"
            tools:text="Peter Parker"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ProfilePictureImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/circular_button"
            android:id="@+id/addTaskButton"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="30dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="@string/plus"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>